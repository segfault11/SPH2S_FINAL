//------------------------------------------------------------------------------
//  SceneVertex.glsl
//------------------------------------------------------------------------------
#version 330
//------------------------------------------------------------------------------
uniform mat4 uProjMat;
uniform mat4 uViewMat;
//------------------------------------------------------------------------------
in vec3 inPosition;
in vec3 inNormal;
//------------------------------------------------------------------------------
out VertexData
{
    smooth vec3 Normal;
}
outVertexData;
//------------------------------------------------------------------------------
void main()
{
    outVertexData.Normal = (transpose(inverse(uViewMat))*
        vec4(inNormal, 1.0f)).xyz;
    gl_Position = uProjMat*uViewMat*vec4(inPosition, 1.0f);
}
//------------------------------------------------------------------------------